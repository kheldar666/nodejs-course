    "version": "0.2.0",
    "configurations": [
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Node Assignment(s) App",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/02-assignments/004/app.js",
            "restart": true,
            "runtimeExecutable": "nodemon",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/02-assignments/004/"
        },
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Express App (MySQL)",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/01-courses/node-express/app-mysql.js",
            "restart": true,
            "runtimeExecutable": "nodemon",
            "console": "integratedTerminal",
            "cwd":"${workspaceFolder}/01-courses/node-express/"
        },
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Express App (MongoDB)",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/01-courses/node-express/app-mongodb.js",
            "restart": true,
            "runtimeExecutable": "nodemon",
            "console": "integratedTerminal",
            "cwd":"${workspaceFolder}/01-courses/node-express/"
        }
    ]
}